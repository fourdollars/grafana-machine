{
  "title": "Concourse CI - Build Monitor",
  "tags": [
    "concourse",
    "ci",
    "builds",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "System Health Overview",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 1
      },
      "collapsed": false
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Web Server",
      "description": "Concourse web server availability",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "max by (juju_charm) (up{juju_charm=\"concourse-ci-machine\"})",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "value": "0",
              "text": "DOWN"
            },
            {
              "type": "value",
              "value": "1",
              "text": "RUNNING"
            }
          ]
        }
      }
    },
    {
      "id": 3,
      "type": "piechart",
      "title": "Active Workers",
      "description": "Concourse workers by state (running, landing, landed, retiring, stalled)",
      "gridPos": {
        "x": 6,
        "y": 1,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum by (state) (concourse_workers_registered{juju_charm=\"concourse-ci-machine\"})",
          "refId": "A",
          "legendFormat": "{{state}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true,
          "values": [
            "value"
          ]
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        },
        "displayLabels": [
          "percent"
        ]
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            }
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "running"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "landing"
