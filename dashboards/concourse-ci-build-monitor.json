        {
          "expr": "(count(concourse_job_last_build_status{juju_charm=\"concourse-ci-machine\"} == 1) or vector(0)) / (count(concourse_job_last_build_status{juju_charm=\"concourse-ci-machine\"} >= -2 and concourse_job_last_build_status{juju_charm=\"concourse-ci-machine\"} <= 1) or vector(1)) * 100",
          "refId": "A"
